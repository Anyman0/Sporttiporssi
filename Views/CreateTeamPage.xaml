<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sporttiporssi.Views.CreateTeamPage"
             xmlns:controls="clr-namespace:Sporttiporssi.Helpers.Controls"
             Title="Create Team">
    <ContentPage.Resources>
        <ResourceDictionary>
            <controls:MultiplierControl x:Key="MultiplierControl"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="10" Margin="10">
            <Label Text="Create a New Fantasy Team" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,40" />

            <Label Text="Team Name" />
            <Entry x:Name="TeamNameEntry" Placeholder="Enter team name" />
            
            <Button Text="Create Team" Clicked="Button_Clicked" Margin="10" />
        </StackLayout>
    </ScrollView>
</ContentPage>